<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/appbar"
        tools:context="com.paha.musicapp.activities.SongDirectoryActivity" android:id="@+id/song_list_layout">



    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/all_songs_list_view" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:background="@color/white"/>

</LinearLayout>


