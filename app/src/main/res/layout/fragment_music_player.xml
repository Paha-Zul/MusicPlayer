<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:clickable="true"
              android:layout_marginBottom="0dp"
              android:layout_alignParentBottom="true"
              android:layout_gravity="bottom"
              android:stretchColumns="*"
              android:background="@color/colorPrimaryDark"
              tools:context="com.paha.musicapp.fragments.MusicPlayerFragment" android:id="@+id/musicPlayer_fragment"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" android:id="@+id/songPlayerSongName"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp" android:textColor="@android:color/white" android:layout_weight="1"/>
        <TextView
            android:text=""
            android:layout_width="150dp"
            android:maxLines="1"
            android:layout_height="match_parent" android:id="@+id/songPlayerSongTime"
            android:gravity="center"
            android:textSize="14sp" android:textAlignment="center" android:layout_weight="1"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <!--<LinearLayout-->
    <!--android:orientation="horizontal"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
        <SeekBar
        android:layout_width="match_parent"
        android:minHeight="30dp"
        android:maxHeight="30dp"
        android:layout_weight="1"
        android:layout_height="0dp" android:id="@+id/songSeekBar"/>
    <!--<ImageButton-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:minHeight="30dp"-->
    <!--android:minWidth="30dp"-->
    <!--android:id="@+id/togglePlay"-->
    <!--style="?android:attr/borderlessButtonStyle"-->
    <!--android:layout_weight="0"-->
    <!--android:background="@drawable/ic_pause_white"/>-->
    <!--</LinearLayout>-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/previousSong" android:adjustViewBounds="false"
                android:cropToPadding="false" android:background="@drawable/ic_skip_previous_white_48dp"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/replay10"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/ic_replay_10_white_48dp"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:id="@+id/togglePlay"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="0"
                android:background="@drawable/ic_pause_white"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/nextSong"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/ic_skip_next_white_48dp"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
